<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp" app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imgView_item"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="sanjeev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_fileName_item"
            app:layout_constraintTop_toTopOf="@+id/imgView_item"
            app:layout_constraintBottom_toBottomOf="@+id/imgView_item"
            app:layout_constraintStart_toEndOf="@+id/imgView_item" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/button_delete_item"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:gravity="center"
            android:textSize="18sp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/button_delete_item" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgView_item"
            app:layout_constraintTop_toTopOf="@+id/imgView_item" android:background="@drawable/ic_delete_red_24dp"/>
</android.support.constraint.ConstraintLayout>